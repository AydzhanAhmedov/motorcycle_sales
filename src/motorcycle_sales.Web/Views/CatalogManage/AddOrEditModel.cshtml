@model AddOrEditModelViewModel

@{
    ViewBag.Title = "Model";
    Layout = null;
}

<form asp-action="AddOrEditModel" method="post" onsubmit="return jQueryAjaxPost(this)">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input asp-for="ModelId" type="hidden" />
    <div class="row">
        <div class="col gap-3">
            <div class="form-group col-sm">
                @Html.LabelFor(x => Model.BrandId)
                @Html.DropDownListFor(x => Model.BrandId, Model.Brands, htmlAttributes: new { @class = "form-control", id = "Brands" })
                @Html.ValidationMessageFor(x => x.BrandId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="padding-bottom:10px;">
                <label asp-for="ModelName"></label>
                <input class="form-control" asp-for="ModelName" type="text"></input>
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group text-align-end">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Save
                </button>
            </div>
        </div>
    </div>
</form>